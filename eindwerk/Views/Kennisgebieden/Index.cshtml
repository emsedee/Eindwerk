@model IEnumerable<eindwerk.Entities.Kennisgebieden>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KorteOmschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LangeOmschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoortKennisgebied)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KorteOmschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LangeOmschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoortKennisgebied)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpecialisatieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpecialisatieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpecialisatieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
