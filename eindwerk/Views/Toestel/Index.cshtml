@model IEnumerable<eindwerk.Entities.Toestel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Merk)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SoortToestel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Merk)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.SoortToestel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatie.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToestelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ToestelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ToestelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
